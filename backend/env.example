# ============================================
# FlexAI Backend Environment Configuration
# ============================================
# Copy this file to .env and update with your values
# cp env.example .env

# ============================================
# Database Configuration
# ============================================
# Option 1: SQLite (No setup required - recommended for development)
DATABASE_URL=sqlite:///./flexai.db

# Option 2: PostgreSQL (For production)
# DATABASE_URL=postgresql://username:password@localhost:5432/flexai_db

# MongoDB (Primary Database)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=flexai
MONGODB_DB_NAME=flexai

# ============================================
# Solana Blockchain Configuration
# ============================================
# Solana RPC Endpoint
# Devnet (for testing): https://api.devnet.solana.com
# Mainnet (for production): https://api.mainnet-beta.solana.com
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_WS_URL=wss://api.devnet.solana.com

# Program ID (Solana Smart Contract)
# Option 1: Leave empty to use fallback mode (works without deployment)
PROGRAM_ID=

# Option 2: Use deployed program ID (after deploying smart contract)
# Get this by running: anchor deploy --provider.cluster devnet
# PROGRAM_ID=YourDeployedProgramIDHere44CharactersLong

# Solana Private Key (Base58 encoded)
# Only needed if you want server-side transaction signing
# Get by: cat ~/.config/solana/keypair.json | base58
# SOLANA_PRIVATE_KEY=your_base58_private_key_here

# SPL Token Mint Address (Optional - for token rewards)
# Leave empty to use native SOL
TOKEN_MINT=

# ============================================
# Gemini API Configuration
# ============================================
# Get your free API key from: https://aistudio.google.com/apikey
# Option 1: Leave empty to use mock evaluation (works without API key)
GEMINI_API_KEY=

# Option 2: Add your API key for real AI evaluation
# GEMINI_API_KEY=your_gemini_api_key_here

# Gemini Model to use
GEMINI_MODEL=gemini-pro

# ============================================
# Security Configuration
# ============================================
# Secret key for JWT tokens (CHANGE THIS IN PRODUCTION!)
# Generate a secure key: openssl rand -hex 32
SECRET_KEY=dev-secret-key-change-in-production-please-use-random-hex

# JWT Algorithm
ALGORITHM=HS256

# Access token expiration time (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# CORS Configuration
# ============================================
# Allowed origins for CORS (comma-separated or JSON array)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# ============================================
# API Server Configuration
# ============================================
# Server host (0.0.0.0 for all interfaces)
API_HOST=0.0.0.0

# Server port
API_PORT=8000

# Debug mode (True for development, False for production)
DEBUG=True

# ============================================
# Storage Configuration (Optional)
# ============================================
# IPFS Gateway URL
IPFS_GATEWAY=https://ipfs.io/ipfs/

# AWS S3 Configuration (Optional - for model storage)
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ============================================
# Auth0 Configuration (Optional)
# ============================================
# If using Auth0 for authentication
AUTH0_DOMAIN=
AUTH0_CLIENT_ID=
AUTH0_CLIENT_SECRET=
AUTH0_AUDIENCE=

# ============================================
# Model Configuration
# ============================================
# Path for storing model files
MODEL_STORAGE_PATH=./models

# Maximum training rounds
MAX_ROUNDS=100

# Minimum contributors required
MIN_CONTRIBUTORS=3

# ============================================
# Privacy Configuration (Optional)
# ============================================
# Local Differential Privacy epsilon
LDP_EPSILON=1.0

# Noise scale for privacy
NOISE_SCALE=0.1
